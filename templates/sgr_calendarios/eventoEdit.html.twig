    <div class="row p-3">
        
        <a href="{{ urlToBack }}"><h2> <i class="fas fa-angle-double-left"></i> Volver </h2></a>
    </div>
   
   <div class="row p-3">
       
       <h1>Editar Evento</h1>
       
        {% for label, messages in app.flashes %}
