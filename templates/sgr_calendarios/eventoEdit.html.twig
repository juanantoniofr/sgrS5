            	<div class="alert alert-{{ label }}" role="alert">
                	{{ message }}
            	</div>
        	{% endfor %}
    	{% endfor %}

        {# solapes && errors#}
        {{ include('sgr_form/_errors.html.twig') }}    

        {{ include('sgr_evento/_form.html.twig') }}
        
        <div class = "col-12 p-3" >
            {{ include('sgr_calendarios/_deleteEvento_form.html.twig') }}
        </div>
    </div>
{% endblock %}

