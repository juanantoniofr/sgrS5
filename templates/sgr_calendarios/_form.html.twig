{{ form_start(form) }}
<fieldset>
	<div class="form-row mb-1">
		<div class="col-md-8">
			<div class="form-group col-md-6">
    			<label for="inputTermino">{{ form_label(form.termino) }}</label>
    				{{ form_widget(form.termino) }}
    		</div>
    		<div class="form-group col-md-12">
    			{{ form_widget(form.espacio) }}
    		</div>
    	</div>
    	
    	<div class="col-md-4">
	        <div class="form-group col-md-6">
	  			<label>{{ form_label(form.f_inicio) }}</label>
		    	<div class='input-group date' id='datetimepicker-fi'>
		           	{{ form_widget(form.f_inicio, {'attr': {'class': 'form-control input-inline datetimepicker'}}) }}
		            <div class="input-group-append input-group-addon">
		    			<span class="input-group-text">
		    				<i class="fas fa-calendar-alt"></i>
		    			</span>
		  			</div>
				</div>
			</div>

	        <div class="form-group col-md-6">
	  			<label>{{ form_label(form.f_fin) }}</label>
		    	<div class='input-group date' id='datetimepicker-ff'>
	    	       	{{ form_widget(form.f_fin, {'attr': {'class': 'form-control input-inline datetimepicker'}}) }}
	            	<div class="input-group-append input-group-addon">
	    				<span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
	  				</div>
				</div>
			</div>
	    </div>
	</div>
    <button class="btn btn-primary" id="sgr_filters_sgr_eventos_submit" role="button" ><i class="fas fa-search"></i> {{ button_label|default('Mostrar eventos') }}</button>  

	{{ form_row(form._token) }}  
</fieldset>  
{{ form_end(form, {'render_rest': false}) }}