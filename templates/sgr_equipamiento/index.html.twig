{% extends 'base.html.twig' %}

{% block title %}SgrEquipamiento index{% endblock %}

{% block body %}
    <h1>Equipamiento</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sgr_equipamiento in sgr_equipamientos %}
            <tr>
                <td>{{ sgr_equipamiento.id }}</td>
                <td>{{ sgr_equipamiento.nombre }}</td>
                <td>{{ sgr_equipamiento.descripcion }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('sgr_equipamiento_show', {'id': sgr_equipamiento.id}) }}">Ver</a>
                    <a class="btn btn-primary"  href="{{ path('sgr_equipamiento_edit', {'id': sgr_equipamiento.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay equipamiento definido</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" role="button" href="{{ path('sgr_equipamiento_new') }}">Nuevo equipamiento</a>
{% endblock %}
