{% extends 'base.html.twig' %}

{% block title %}Sgr: Tipos de actividades{% endblock %}

{% block body %}
    <h1>Actividades</h1>

    <a class="btn btn-primary m-1" type="button" href="{{ path('sgr_tipo_actividad_new') }}">Nueva actividad</a>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Actividad</th>
                <th>Descripcion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        
        {% for sgr_tipo_actividad in pagination %}
            <tr>
                
                <td>{{ sgr_tipo_actividad.actividad }}</td>
                <td>{{ sgr_tipo_actividad.descripcion }}</td>
                <td>
                    <a class="btn btn-secondary m-1" type="button" href="{{ path('sgr_tipo_actividad_show', {'id': sgr_tipo_actividad.id}) }}">Ver</a>
                    <a class="btn btn-primary m-1" type="button" href="{{ path('sgr_tipo_actividad_edit', {'id': sgr_tipo_actividad.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div>
        <div>{{ knp_pagination_render(pagination) }}</div>
        <div><small>(<span>Total de actividades: {{ pagination.getTotalItemCount }}</span>)</small></div>   
    </div>
{% endblock %}
