    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Asignaturas</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sgr_titulacion in sgr_titulacions %}
