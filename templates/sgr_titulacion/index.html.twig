{% extends 'base.html.twig' %}

{% block title %}Titulaciones{% endblock %}

{% block body %}
    <h1>Titulaciones</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sgr_titulacion in sgr_titulacions %}
            <tr>
                <td>{{ sgr_titulacion.id }}</td>
                <td>{{ sgr_titulacion.codigo }}</td>
                <td>{{ sgr_titulacion.nombre }}</td>
                <td>{{ sgr_titulacion.tipo }}</td>
                <td>
                    <a class="btn btn-secondary" type="button" href="{{ path('sgr_titulacion_show', {'id': sgr_titulacion.id}) }}">Ver</a>
                    <a class="btn btn-primary" type="button" href="{{ path('sgr_titulacion_edit', {'id': sgr_titulacion.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No hay titulaciones definidas</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" type="button" href="{{ path('sgr_titulacion_new') }}">Create new</a>
{% endblock %}
