{% endblock %}

{% block body %}
    <h1>Editar Evento</h1>
    {% for label, messages in app.flashes %}
    	{% for message in messages %}
        	<div class="alert alert-{{ label }}" role="alert">
            	{{ message }}
        	</div>
    	{% endfor %}
	{% endfor %}

    {# solapes && errors#}
    {{ include('sgr_form/_errors.html.twig') }}    

    {{ include('sgr_evento/_form.html.twig') }}

    <a href="{{ path('sgr_evento_index') }}">Volver a la lista</a>

    {{ include('sgr_evento/_delete_form.html.twig') }}
{% endblock %}

