                    <span class="input-group-text">
                        <i class="fas fa-calendar-alt"></i>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group col-md-2">
                <label>{{ form_label(form.f_fin) }}</label>
                <div class='input-group date' id='datetimepicker-ff'>
                    {{ form_widget(form.f_fin, {'attr': {'class': 'form-control input-inline datetimepicker'}}) }}
                    <div class="input-group-append input-group-addon">
                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    </div>
                </div>
        </div>

        <div class="form-group col-md-2">
            <label for="inputTitulo">{{ form_label(form.h_inicio) }}</label>
            <div class='input-group date' id='datetimepicker-hi'>
                {{ form_widget(form.h_inicio, {'attr': {'class': 'form-control input-inline datetimepicker'}}) }}
