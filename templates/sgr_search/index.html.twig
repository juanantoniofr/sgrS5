{% extends 'base.html.twig' %}

{% block title %}Sgr: Eventos{% endblock %}

{% block stylesheets %}
    
    <link href="/build/bootstrap-datetimepicker.css" rel="stylesheet">
    <link href="/build/bootstrap-datetimepicker-standalone.min.css" rel="stylesheet">

    <!-- 
    
    <link href="/reservasfgh/public/build/bootstrap-datetimepicker.css" rel="stylesheet">
    <link href="/reservasfgh/public/build/bootstrap-datetimepicker-standalone.min.css" rel="stylesheet">
    
    -->
{% endblock %}

{% block body %}
    <h1>Disponibilidad</h1>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    
    <!-- Collapse buttons by filters -->
    <!--<p>
        <a class="btn btn-info" data-toggle="collapse" href="#Filtros" aria-expanded="false" aria-controls="Filtros">
           <i class="far fa-eye"></i> Filtros
        </a>
    </p>-->
    <!-- / Collapse buttons -->

    <!-- Collapsible element -->
    <div class="" id="Filtros">
        <div class="mt-3 mb-3">
            {{ include('sgr_search/_formSearch.html.twig', {'button_label': 'Buscar'}) }}
        </div>
    </div>
    <!-- / Collapsible element -->    
    
    {% if pagination is defined %}
    <h1>Listado de Espacios</h1>
    {% if data is defined  %} 
        <div class="alert alert-success p-4" role="alert">
            <h5>Resultados para los términos de busqueda:</h5>
            {% for key, input in data %}
                {% if not input is null  %}
                   <b>{{ key }}</b>={{ input }}, 
                {% endif %}
            {% endfor %}
            
        
        </div>
    {% endif %}

    <div class="p-1">
        <span>Total de resultados: {{ pagination.getTotalItemCount }}</span>
        <a class="btn btn-danger mb-2 float-right" type="button" href="{{ path('sgr_evento_new') }}"><i class="fas fa-calendar-plus"></i> Nuevo evento</a>
    </div>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Estado</th>
                <th>Id</th>
                <th>Nombre</th>
                <th>Término</th>
                <th>Aforo Máximo</th>
                <th>Aforo Examen</th>
                <th>Equipamiento</th>
            </tr>
        </thead>
        <tbody>
        {% for sgr_espacio in pagination %}
            <tr>
                <td>
                    {% if 0 == sgr_espacio.solapes.count %}
                        <i class="fas fa-check text-success"></i><span class="text-success"> Libre</span>
                    {% elseif not sgr_espacio.solapes is empty  %}
                         
                            <h5>Solapamientos</h5> 
                            {% for solape in sgr_espacio.solapes%}

                                <span class="text-danger">
                                {{ solape.fecha|format_datetime('full','none', locale='es')|capitalize }}
                                    -> </span>
                                    <a href = "{{ path('sgr_evento_edit', {'id': solape.evento.id}) }}">{{ solape.evento.titulo }}</a> ({{ solape.evento.hinicio|format_datetime('none','short', locale='es') }} - {{ solape.evento.hfin|format_datetime('none','short', locale='es') }})
                                </br>
                            {% endfor %}
                        
                    {% endif %}
                    
                    
                    <!--<a class="btn btn-secondary m-1" type="button" href="{# path('sgr_espacio_show', {'id': sgr_espacio.id}) #}">Ver</a>
                    <a class="btn btn-primary  m-1" type="button" href="{# path('sgr_espacio_edit', {'id': sgr_espacio.id}) #}">Editar</a>-->
                </td>
                <td>{{ sgr_espacio[0].id }}</td>
                <td>{{ sgr_espacio[0].nombre }}</td>
                <td>{{ sgr_espacio[0].termino }}</td>
                <td>{{ sgr_espacio[0].aforo }}</td>
                <td>{{ sgr_espacio[0].AforoExamen }} </td>
                <td>
                    {% for medio in sgr_espacio[0].mediosDisponibles %}
                        {{ medio }} &nbsp;
                    {% else %}
                        No hay medios definidos
                    {% endfor %}
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="7">No espacios libres encontrados...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <div>
    {{ knp_pagination_render(pagination) }}
    </div>

    
    {% else %}
        <div class="alert alert-primary p-4" role="alert">
            Seleccione criterios de busqueda... 
        </div>
    {% endif %}
    
    
{% endblock %}
