{{ form_start(form) }}
<fieldset>
	<h2>Filtros</h2>
	<div class="form-row mb-1">
		<div class="col-md-9">
			<div class="form-group col-md-3 pt-2 border-top">
    			<label for="inputTermino">{{ form_label(form.termino) }}</label>
    				{{ form_widget(form.termino) }}
    		</div>
    		
    		<div class="form-group col-md-12  pt-2">
    		
    			{{ form_widget(form.espacio) }}
    		</div>

    		<div class="form-group col-md-3 border-top pt-2">
    			<label for="inputTermino">{{ form_label(form.actividad) }}</label>
    				{{ form_widget(form.actividad) }}
    		</div>
    	</div>
    	
    	<div class="col-md-2 p-2">
	        <div class="form-group col-md-12">
	  			<label>{{ form_label(form.f_inicio) }}</label>
		    	<div class='input-group date' id='datetimepicker-fi'>
		           	{{ form_widget(form.f_inicio, {'attr': {'class': 'form-control input-inline datetimepicker'}}) }}
		            <div class="input-group-append input-group-addon">
		    			<span class="input-group-text">
		    				<i class="fas fa-calendar-alt"></i>
		    			</span>
		  			</div>
				</div>
			</div>

	        <div class="form-group col-md-12">
	  			<label>{{ form_label(form.f_fin) }}</label>
		    	<div class='input-group date' id='datetimepicker-ff'>
	    	       	{{ form_widget(form.f_fin, {'attr': {'class': 'form-control input-inline datetimepicker'}}) }}
	            	<div class="input-group-append input-group-addon">
	    				<span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
	  				</div>
				</div>
			</div>
		</div>
	    
	</div>
	<div class="form-row mb-1">

		<div class="form-group col-md-3 border-top pt-2">
    		<label for="inputTermino">{{ form_label(form.titulacion) }}</label>
    			{{ form_widget(form.titulacion) }}
    	</div>
    	<div class="form-group col-md-3 border-top pt-2">
            <label for="inputCurso">{{ form_label(form.curso) }}</label>
            {{ form_widget(form.curso) }}
        </div>
    	<div class="form-group col-md-3 border-top pt-2">
    		<label for="inputTermino">{{ form_label(form.asignatura) }}</label>
    			{{ form_widget(form.asignatura) }}
    	</div>
    	<div class="form-group col-md-3 border-top pt-2">
    		<label for="inputTermino">{{ form_label(form.profesor) }}</label>
    			{{ form_widget(form.profesor) }}
    	</div>
	</div>
	<div class="row">
		<div class="col-md-2 text-left">
			<button class="btn btn-primary" id="sgr_filters_sgr_eventos_submit" role="button" ><i class="fas fa-search"></i> {{ button_label|default('Mostrar eventos') }}</button>
		</div>
	</div>
	{{ form_row(form._token) }}  
</fieldset>  
{{ form_end(form, {'render_rest': false}) }}