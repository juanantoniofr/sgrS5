{% extends 'base.html.twig' %}

{% block title %}SgrEspacio index{% endblock %}

{% block body %}
    <h1>Espacios</h1>

    <table class="table tabl-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Acl</th>
                <th>Aforo</th>
                <th>Medios</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sgr_espacio in sgr_espacios %}
            <tr>
                <td>{{ sgr_espacio.id }}</td>
                <td>{{ sgr_espacio.nombre }}</td>
                <td>{{ sgr_espacio.descripcion }}</td>
                <td>{{ sgr_espacio.acl }}</td>
                <td>{{ sgr_espacio.aforo }}</td>
                <td>{{ sgr_espacio.medios ? sgr_espacio.medios|json_encode : '' }}</td>
                <td>
                    <a class="btn btn-secondary" type="button" href="{{ path('sgr_espacio_show', {'id': sgr_espacio.id}) }}">Ver</a>
                    <a class="btn btn-primary" type="button" href="{{ path('sgr_espacio_edit', {'id': sgr_espacio.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No hay espacios definidos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" type="button" href="{{ path('sgr_espacio_new') }}">Nuevo espacio</a>
{% endblock %}
